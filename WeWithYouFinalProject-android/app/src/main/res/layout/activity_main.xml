<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/trek"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp">

    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/takeimage"
            android:layout_width="fill_parent"
            android:layout_height="75dp"

            android:background="#00000000"
            android:orientation="horizontal">

            <TextView

                android:id="@+id/get_image_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="Take Photo"
                android:textSize="24sp"
                tools:textColor="#000000" />

            <ImageView
                android:id="@+id/image_view"
                android:layout_width="75dp"

                android:layout_height="75dp"

                android:scaleType="fitXY"
                android:src="@drawable/icons" />
        </LinearLayout>

        <LinearLayout
            android:paddingTop="30dp"
            android:id="@+id/userRegisteration"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="User Registeration"
                android:textColor="@android:color/black"
                android:textSize="30sp" />

        </LinearLayout>

        <LinearLayout
            android:paddingTop="30dp"
            android:id="@+id/textholder"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText

                android:id="@+id/editTextEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"
                android:hint="Email Address"
                android:inputType="textEmailAddress" />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/textholder2"
            android:paddingTop="15dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <EditText

                android:id="@+id/editTextPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:paddingLeft="10dp"
                android:ems="10"
                android:hint="Password"
                android:inputType="textPassword" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/registerbtnholder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="200dp"
            >

            <TextView
                android:id="@+id/buttonRegister"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"

                android:background="@drawable/border"


                android:gravity="center"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"

                android:text="Register"
                android:textColor="#000000"
                android:textSize="36sp" />
        </LinearLayout>

        <LinearLayout
            android:paddingTop="10dp"
            android:id="@+id/singhere"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"></LinearLayout>

        <TextView
            android:id="@+id/singInTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:gravity="right"
            android:text="Sing in here!"
            android:textColor="#000000"
            android:textSize="24sp"

            android:textStyle="bold" />
    </LinearLayout>
</RelativeLayout>