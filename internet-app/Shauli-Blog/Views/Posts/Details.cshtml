            @Html.DisplayNameFor(model => model.Content)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Content)
        </dd>

    </dl>
</div>



<h1>The Picture that Uploaded by @Model.Author</h1>
<p>
@if (File.Exists(Server.MapPath("~/upFiles/") + Model.ID + ".png"))
{
    <img id="@(Model.ID + "img")" src="~/upFiles/@(Model.ID + ".png")" width="420" height="315" style="visibility: visible;" />
}
        </p>
<p>
    <h1>The video that Uploaded by @Model.Author</h1>
    @if (File.Exists(Server.MapPath("~/upFiles/") + Model.ID + ".mp4"))
    {
        <video width="420" height="315" controls preload="auto">
            <source src="~/upFiles/@(Model.ID + ".mp4")" />
        </video>
    }
</p>

<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.ID }) |
    @Html.ActionLink("Back to List", "Index")
</p>
